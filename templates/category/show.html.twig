{% extends 'base.html.twig' %}

{% block title %}Category {{ category.name }}{% endblock %}

{% block body %}
    <h1>Category {{ category.name }}</h1>
    <div class="container">
        <div class="row ">
            <div class="col-12">
                <div class="blog-full-width-wrapper">
                    <div class="row">
                        {% for product in products %}
                            <div class="col-lg-4 col-md-6 col-12">
                                <!-- Start Blog Grid Single -->
                                <div class="blog-feed-single">
                                    <a href="{{ path('app_product_show', {'id': product.id}) }}"
                                       class="blog-feed-img-link">
                                        <img src="assets/images/blog_images/aments_blog_01.jpg" alt=""
                                             class="blog-feed-img">
                                    </a>
                                    <div class="blog-feed-content">
                                        <div class="blog-feed-post-meta">
                                            <span>Product ID:</span>
                                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="blog-feed-post-meta-author">{{ product.id }}</a>
                                        </div>
                                        <div class="blog-feed-post-meta">
                                            <span>Category:</span>
                                            <a href="{{ path('app_category_show', {'id': category.id}) }}" class="blog-feed-post-meta-author">{{ category.name }}</a>
                                        </div>
                                        <div class="blog-feed-post-meta">
                                            <span>Unique CODE:</span>
                                            <a href="" class="blog-feed-post-meta-author">{{ product.uniqueCode }}</a>
                                        </div>
                                        <div class="blog-feed-post-meta">
                                            <span>Status:</span>
                                            <a href="" class="blog-feed-post-meta-author">{{ product.status }}</a>
                                        </div>
                                        <h5 class="blog-feed-link"><a
                                                    href="{{ path('app_product_show', {'id': product.id}) }}">{{ product.name }}</a>
                                        </h5>
                                        <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
                                    </div>
                                </div>
                                <!-- End Blog Grid Single -->
                            </div>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
