{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<!-- ...:::: Start Breadcrumb Section:::... -->
<div class="breadcrumb-section">
    <div class="breadcrumb-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-12 d-flex justify-content-between justify-content-md-between  align-items-center flex-md-row flex-column">
                    <h3 class="breadcrumb-title">Categories</h3>
                    <h4><a href="{{ path('app_category_new') }}">Create new</a></h4>
                </div>
            </div>
        </div>
    </div>
</div> <!-- ...:::: End Breadcrumb Section:::... -->
<div class="container">
    <div class="row ">
        <div class="col-12">
            <div class="blog-full-width-wrapper">
                <div class="row">
                    {% for category in categories %}
                    <div class="col-lg-4 col-md-6 col-12">
                        <!-- Start Blog Grid Single -->
                        <div class="blog-feed-single">
                            <a href="{{ path('app_category_show', {'id': category.id}) }}" class="blog-feed-img-link">
                                <img src="assets/images/blog_images/aments_blog_01.jpg" alt=""
                                     class="blog-feed-img">
                            </a>
                            <div class="blog-feed-content">
                                <div class="blog-feed-post-meta">
                                    <span>Category ID:</span>
                                    <a href="" class="blog-feed-post-meta-author">{{ category.id }}</a>
                                </div>
                                <div class="blog-feed-post-meta">
                                    <span>Status:</span>
                                    <a href="" class="blog-feed-post-meta-author">{{ category.status }}</a>
                                </div>
                                <h5 class="blog-feed-link"><a href="{{ path('app_category_show', {'id': category.id}) }}">{{ category.name }}</a></h5>
                                <a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
                            </div>
                        </div>
                        <!-- End Blog Grid Single -->
                    </div>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
